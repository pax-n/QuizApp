<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <%- include('partials/header.ejs') %>
    <main>
      <div class="container py-4">
        <!-- Home Page -->
        <div class="p-5 mb-4 bg-light rounded-3">
          <h4 class="mb-3">Public Kazoots!</h4>
          <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <!-- Quiz -->
            <% for(let arr in quiz) { %>
            <div class="col">
              <div class="card">
                <h5 class="card-header"><%= quiz[arr].name %></h5>
                <div class="card-body">
                  <h5 class="card-title"><%= quiz[arr].description %></h5>
                  <p class="card-text">
                    <%= quiz[arr].id %> <%= quiz[arr].user_id %> <%=
                    quiz[arr].isprivate %>
                  </p>
                  <a href="#" class="btn btn-primary">Start Quiz</a>
                </div>
                <div class="card-footer text-muted">
                  <a href="">Author[User Name]</a>
                  <a href="#" class="btn btn-primary badge">Share</a>
                </div>
              </div>
            </div>
            <% } %>
            <!-- End Quiz -->
          </div>
        </div>
        <!-- End Home Page -->
      </div>
    </main>
    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <!-- Only Form Validation -->
    <script src="/scripts/form-validation.js"></script>
  </body>
</html>
