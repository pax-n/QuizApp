<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <%- include('partials/header.ejs') %>
    <main>
      <div class="container py-4 ">
          <!-- Creating Quiz -->
          <div class="p-5 mb-4 bg-light rounded-3">
            <h4 class="mb-3">Create a Kazoot Quiz Now!</h4>
            <form action="/createquiz" method="post" class="needs-validation" novalidate>
              <div class="row g-3">
                <div class="col-12">
                  <label for="" class="form-label">Name your Kazoot!</label>
                  <input
                    name="quizTitle"
                    type="text"
                    class="form-control"
                    id="quizName"
                    required
                  />
                  <div class="invalid-feedback">Your Kazoot is required.</div>
                </div>

                <div class="col-12">
                  <label for="" class="form-label">About your Kazoot</label>
                  <textarea
                    name="quizDesc"
                    type="text"
                    class="form-control"
                    id="quizDesc"
                    placeholder=""
                    required
                  ></textarea>
                  <div class="invalid-feedback">
                    About your Kazoot is required
                  </div>
                  <hr class="my-4" />
                  <button class="btn btn-primary btn-lg" method="post">Next</button>
                </div>
              </div>
            </form>
          </div>
          <!-- End Creating Quiz -->

      </div>
    </main>
    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <!-- Only Form Validation -->
    <script src="/scripts/form-validation.js"></script>
  </body>
</html>
