      <div class="container py-4">
        <!-- Creating Quiz -->
        <div class="p-5 mb-4 bg-light rounded-3">
          <h4 class="mb-3">Create a Kazoot Quiz Now!</h4>
          <form class="needs-validation" novalidate>
            <div class="row g-3">
              <div class="col-12">
                <label for="" class="form-label">Name your Kazoot!</label>
                <input
                  type="text"
                  class="form-control"
                  id="quizName"
                  required
                />
                <div class="invalid-feedback">Your Kazoot is required.</div>
              </div>

              <div class="col-12">
                <label for="" class="form-label">About your Kazoot</label>
                <textarea
                  type="text"
                  class="form-control"
                  id="quizDesc"
                  placeholder=""
                  required
                ></textarea>
                <div class="invalid-feedback">
                  About your Kazoot is required
                </div>
                <hr class="my-4" />
                <button class="btn btn-primary btn-lg">Next</button>
              </div>
            </div>
          </form>
        </div>
        <!-- End Creating Quiz -->

        <!-- Making The Quiz -->
        <div id="question-box" class="p-5 mb-4 bg-light rounded-3">
          <h4 class="mb-3">Question 1</h4>
          <form class="needs-validation" novalidate>
            <div class="row g-3">
              <div class="col-12">
                <label for="" class="form-label">Question</label>
                <textarea
                  type="text"
                  class="form-control"
                  id=""
                  placeholder=""
                  required
                ></textarea>
                <div class="invalid-feedback">Question is required</div>
              </div>

              <div class="col-12">
                <label for="" class="form-label">Answer</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Answer"
                  value=""
                  required
                />
                <div class="invalid-feedback">Answer is required.</div>
              </div>

              <div class="col-12">
                <label for="" class="form-label">Option 1</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Option 1"
                  value=""
                  required
                />
                <div class="invalid-feedback">Option 1 is required.</div>
              </div>
              <div id= "answerOptions" class="col-12">
                <div class="input-group mb-3">
                  <button id="delAns" class="btn btn-outline-danger" type="button">
                    Delete
                  </button>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Option"
                  />
                </div>
              </div>
              <div class="col-12">
                <a id="addAns" class="btn btn-secondary"> Add Option </a>
              </div>
            </div>
            <hr class="my-4" />
            <button id="deleteQuestion" class="btn btn-danger btn-lg">Delete</button>
          </form>

        </div>
        <button id="addQuestion" class="btn btn-secondary btn-lg">Add More Questions</button>
        <button id="createQuiz" class="btn btn-primary btn-lg">Complete</button>
