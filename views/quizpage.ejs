<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <%- include('partials/header.ejs') %>
    <main>
      <div class="container py-4">
        <!-- Quiz Page -->
        <div class="p-5 mb-4 bg-light rounded-3">
          <h4 class="mb-3">Quiz Title</h4>
          <div class="card">
            <h5 class="card-header">Questions: 1</h5>
            <div class="card-body">
              <p class="card-text">
                Question Question Question Question Question Question Question
              </p>
            </div>
            <div class="list-group list-group-flush">
              <input
                type="radio"
                class="btn-check"
                name="question1"
                id="question1-1"
                autocomplete="off"
                checked
              />
              <label
                class="btn btn-outline-secondary rounded-0 text-start"
                for="question1-1"
                >Radio 1</label
              >

              <input
                type="radio"
                class="btn-check"
                name="question1"
                id="question1-2"
                autocomplete="off"
              />
              <label
                class="btn btn-outline-secondary rounded-0 text-start"
                for="question1-2"
                >Radio 2</label
              >

              <input
                type="radio"
                class="btn-check"
                name="question1"
                id="question1-3"
                autocomplete="off"
              />
              <label
                class="btn btn-outline-secondary rounded-0 text-start"
                for="question1-3"
                >Radio 3</label
              >
            </div>
            <div class="card-footer text-muted">
              <a href="">Author[User Name]</a>
              <a href="#" class="btn btn-primary badge">Share</a>
              <a href="#" class="btn btn-primary badge">Attempt</a>
            </div>
          </div>

          <hr class="my-4" />

          <div class="card">
            <h5 class="card-header">Questions: 2</h5>
            <div class="card-body">
              <p class="card-text">
                Question Question Question Question Question Question Question
              </p>
            </div>
            <div class="list-group list-group-flush">
              <input
                type="radio"
                class="btn-check"
                name="question2"
                id="question2-1"
                autocomplete="off"
                checked
              />
              <label
                class="btn btn-outline-secondary rounded-0 text-start"
                for="question2-1"
                >Radio 1</label
              >

              <input
                type="radio"
                class="btn-check"
                name="question2"
                id="question2-2"
                autocomplete="off"
              />
              <label
                class="btn btn-outline-secondary rounded-0 text-start"
                for="question2-2"
                >Radio 2</label
              >

              <input
                type="radio"
                class="btn-check"
                name="question2"
                id="question2-3"
                autocomplete="off"
              />
              <label
                class="btn btn-outline-secondary rounded-0 text-start"
                for="question2-3"
                >Radio 3</label
              >
            </div>
            <div class="card-footer text-muted">
              <a href="">Author[User Name]</a>
              <a href="#" class="btn btn-primary badge">Share</a>
              <a href="#" class="btn btn-primary badge">Attempt</a>
            </div>
          </div>
          <hr class="my-4" />

          <button class="w-100 btn btn-primary btn-lg" type="submit">
            Submit
          </button>
        </div>
        <!-- End Quiz Page -->
      </div>
    </main>
    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <!-- Only Form Validation -->
    <script src="/scripts/form-validation.js"></script>
  </body>
</html>
